@model EF_CODE_FIRST.Models.Books
@{
    ViewBag.Title = "Eliminar";
}

<div class="Container">
    <div class="row">
        <fieldset>
            @using (Html.BeginForm("Eliminar", "Home", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
                <legend>Eliminar libro de titulo: @Model.Title</legend>
                <label for="Title">Titulo</label>
                @Html.EditorFor(m => Model.Title)
                @Html.ValidationMessageFor(modelName => Model.Title)
                <label for="Author">Autor</label>
                @Html.EditorFor(m => Model.Author)
                @Html.ValidationMessageFor(modelName => Model.Author)
                <br />
                <input type="submit" value="Eliminar" class="btn btn-danger" />

            }
        </fieldset>
    </div>
</div>
