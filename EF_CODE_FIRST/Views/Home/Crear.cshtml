@model EF_CODE_FIRST.Models.Books
@{
    ViewBag.Title = "Crear";
}

<div class="Container">
    <div class="row">
        <fieldset>
            @using (Html.BeginForm("Crear", "Home", FormMethod.Post)) 
            { 
                @Html.ValidationSummary(true)
                <legend>Crear nuevo libro</legend>
                <label for="Title">Titulo</label>
                @Html.EditorFor(m => Model.Title)
                @Html.ValidationMessageFor(modelName => Model.Title)
                <label for="Author">Autor</label>
                @Html.EditorFor(m => Model.Author)
                @Html.ValidationMessageFor(modelName => Model.Author)
                <br />
                <input type="submit" value="Agregar" class="btn btn-primary" />
                
            }
        </fieldset>
    </div>
</div>
